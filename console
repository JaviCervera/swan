#ifndef SWAN_CONSOLE_H
#define SWAN_CONSOLE_H

#include <iostream>
#include <string>

namespace swan {

class console {
public:
  static void write(const std::string& str) { std::cout << str.c_str(); }
  static void writeln(const std::string& str) { std::cout << str.c_str() << std::endl; }
  static std::string input(const std::string& prompt);
protected:
  console() {}
};

inline std::string console::input(const std::string& prompt) {
    char buffer[1024];
    printf("%s", prompt.c_str());
    fgets(buffer, 1024, stdin);
    return buffer;
}

} // namespace swan

#endif // SWAN_CONSOLE_H
